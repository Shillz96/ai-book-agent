# AI Book Marketing Agent - Environment Configuration
# This file contains example environment variables for local development
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_DEBUG=true

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Firebase Configuration (Required)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=config/firebase-credentials.json

# Twitter API Credentials
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Facebook API Credentials
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=

# Instagram API Credentials
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# Pinterest API Credentials
PINTEREST_ACCESS_TOKEN=
PINTEREST_BOARD_ID=

# Google Analytics & Ads Configuration (Required for autonomous operation)
GOOGLE_ANALYTICS_PROPERTY_ID=
GOOGLE_ANALYTICS_CREDENTIALS_PATH=
GOOGLE_ADS_CUSTOMER_ID=
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CREDENTIALS_PATH=

# Budget Management
MONTHLY_MARKETING_BUDGET=500.0
BUDGET_ALERT_THRESHOLD=0.8
EMERGENCY_STOP_THRESHOLD=0.95
AUTO_BUDGET_REALLOCATION=true

# Autonomous Operation Settings
AUTONOMOUS_MODE=false
DAILY_POST_SCHEDULE=9:00,14:00,19:00
WEEKLY_REPORT_DAY=monday
WEEKLY_REPORT_TIME=09:00
AUTO_OPTIMIZATION_ENABLED=true
MIN_CONFIDENCE_THRESHOLD=0.7

# Book Information
BOOK_TITLE=Unstoppable - the young athlete's guide to rock solid mental strength
BOOK_AMAZON_URL=https://amazon.com/dp/your-book-id
BOOK_AUDIBLE_URL=https://audible.com/pd/your-book-id
LANDING_PAGE_URL=https://your-landing-page.com

# Target Audience
PRIMARY_AUDIENCE=youth athletes, parents, coaches
TARGET_AGE_RANGE=13-25
GEOGRAPHIC_TARGETS=US,CA,UK,AU

# Performance Thresholds
MIN_ENGAGEMENT_RATE=0.02
MIN_CTR=0.01
TARGET_ROAS=3.0
MIN_CONVERSION_RATE=0.005

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379/0

# App Configuration
DEFAULT_APP_ID=ai-book-agent

# Server Configuration
PORT=5000 